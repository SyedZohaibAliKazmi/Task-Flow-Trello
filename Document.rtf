const addTask = (event) => \{\par
    // page refresh par remove nahi hoga\par
    event.preventDefault();\par
    // /input\par
    const currentForm = event.target;\par
    //   input elements konsay index par ha ya pata karay ga\par
    const value = currentForm.elements[0].value;\par
  \par
    const parent = currentForm.parentElement;\par
  \par
    // extra empty div add hojayegi\par
    const ticket = createTicket(value);\par
  \par
    //  form say phelay jo input may add kara hoga woh add hojayega colum may\par
    parent.insertBefore(ticket, currentForm);\par
  \par
    //   ya variable colum ki heading ha issay ya pata chalay ga local storage may jo save ho raha ha woh konsay colum say aaya ha\par
    const h3Value = parent.children[0].innerText;\par
  \par
    if (!Array.isArray(savedTasks[h3Value])) \{\par
      // agar array nhi hy tw khali array show karwado q kay push nahi ho sakta\par
      savedTasks[h3Value] = [];\par
    \}\par
  \par
    savedTasks[h3Value].push(value);\par
    //   jason string may convert hokar show hoga local storage may\par
  \par
    localStorage.setItem("savedTasks", JSON.stringify(savedTasks));\par
  \par
    //    input clear kay liya use hoa ha\par
    currentForm.reset();\par
  \};\par
  const myCreateCard = (cardTitle) => \{\par
    // This function will return a div like one below\par
    /* <div class="column">\par
             <h3>smit</h3>\par
