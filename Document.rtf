       </div> */\par
  \par
    const myDiv = document.createElement("div");\par
    const myH3 = document.createElement("h3");\par
    const myForm = document.createElement("form");\par
    const myInput = document.createElement("input");\par
  \par
    const h3Text = document.createTextNode(cardTitle);\par
    console.log(h3Text);\par
    \par
  \par
    myDiv.setAttribute("class", "column");\par
    myInput.setAttribute("type", "text");\par
    myInput.setAttribute("placeholder", "add task");\par
  \par
    myH3.appendChild(h3Text);\par
    myForm.appendChild(myInput);\par
    myDiv.appendChild(myH3);\par
    myDiv.appendChild(myForm);\par
  \par
    myForm.addEventListener("submit", addTask);\par
  \par
    return myDiv;\par
  \};\par
  const createTicket = (value) => \{\par
    // paragraph add hojayega new input may jo add karengay\par
  \par
    const ticket = document.createElement("p");\par
  \par
    // console.log(ticket);\par
    const elementText = document.createTextNode(value);\par
    // console.log(elementText);\par
  \par
    ticket.setAttribute("draggable", "true");\par
    ticket.appendChild(elementText);\par
  \par
    return ticket;\par
  \};\par
  let savedTasks = JSON.parse(localStorage.getItem("savedTasks"));\par
  // console.log(savedTasks);\par
  \par
  if (!savedTasks) \{\par
    savedTasks = \{\};\par
  \}\par
  \par
  \par
  // Displaying the tasks already saved in localStorage\par
